---
import { Image } from '@astrojs/image/components';

import CTAImage from '../../static/CallToAction.webp';
---

  <section
    class="
      flex
      items-center
      justify-center
      py-0
      bg-white bg-gradient-to-br
      from-indigo-600
      via-indigo-500
      to-teal-400
      min-w-screen
    "
  >
    <div
      class="
        relative
        flex flex-col
        items-center
        w-full
        max-w-6xl
        px-4
        py-8
        mx-auto
        text-center
        lg:text-left
        lg:block
        sm:px-6
        md:pb-0
        md:pt-12
        lg:px-12
        lg:py-12
      "
    >
      <h2
        class="
          my-4
          text-3xl
          font-extrabold
          tracking-tight
          text-white
          sm:text-4xl
          md:text-5xl
          lg:my-0
          xl:text-4xl
          sm:leading-tight
        "
      >
        Schau doch mal auf
        <span class="block text-indigo-200 xl:inline">Instagram</span> vorbei!
      </h2>
      <p
        class="
          mt-1
          mb-10
          text-sm
          font-medium
          text-indigo-200
          uppercase
          xl:text-base
          xl:tracking-wider
          lg:mb-0
        "
      >
        Dort findest du regelmäßig spannende Blicke hinter unsere Kulissen.
      </p>
      <div class="flex mb-8 lg:mt-6 lg:mb-0">
        <div class="inline-flex">
          <a
            href="https://www.instagram.com/headofcontent_"
            target="_blank"
            rel="noreferrer"
            class="
              inline-flex
              items-center
              justify-center
              px-5
              py-3
              text-base
              font-medium
              text-indigo-700
              transition
              duration-150
              ease-in-out
              bg-indigo-100
              border border-transparent
              rounded-md
              hover:text-indigo-600
              hover:bg-indigo-50
              focus:outline-none
              focus:shadow-outline
              focus:border-indigo-300
            "
          >
            Auf zu Insta
          </a>
        </div>
      </div>
      <div class="bottom-0 right-0 mb-0 mr-3 lg:absolute lg:-mb-12">
        <Image
          src={CTAImage}
          alt="An astronaut exploring the universe"
          width={500}
          height={500}
          class="max-w-xs mb-4 opacity-75 md:max-w-2xl lg:max-w-lg xl:mb-0 xl:max-w-md"
        />
      </div>
    </div>
  </section>