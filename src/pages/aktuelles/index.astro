---
import Layout from '../../layouts/default.astro';

import SectionContentNavigationBeitrag from '../../components/Section/Content/Navigation/Beitrag.vue'
import SectionContentBeitrag from '../../components/Section/Content/Beitrag.astro'

const posts = await Astro.glob('../../content/posts/*.md');
---
<Layout title="Aktuelles">
  <section class="w-full py-8 bg-white sm:py-12 md:py-16 lg:px-16">
    <div class="px-10 mx-auto max-w-7xl">
        <div class="flex items-center flex-col md:flex-row md:justify-between w-full pb-5 mb-8 border-b border-gray-200">
            <h2 class="text-3xl font-bold text-gray-800 pb-5 md:pb-0">Alle Beitr√§ge</h2>
            <SectionContentNavigationBeitrag/>
        </div>

        <div class="grid grid-cols-12 gap-6">
            {
                posts.sort((a,b) => { return b.frontmatter.published_at - a.frontmatter.published_at }).map((post) => {
                    return <SectionContentBeitrag title={post.frontmatter.titel} image={post.frontmatter.image} href={"/aktuelles/" + post.frontmatter.slug} />
                })
            }
      </div>
    </div>
  </section>
</Layout>