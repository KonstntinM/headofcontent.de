---
import Layout from './default.astro'
const { content } = Astro.props;
---

<Layout title={content.titel}>
    <section class="w-full px-8 pt-20 pb-16 bg-white xl:px-0">
        <div class="flex flex-col max-w-3xl mx-auto">
            <slot />
        </div>
    </section>
</Layout>

<style lang="scss" is:global>
    h1 {
       @apply text-4xl pb-16 font-extrabold leading-none sm:text-5xl md:text-6xl lg:leading-7;
    }
    h2 {
        @apply text-2xl py-6 font-extrabold leading-none sm:text-5xl md:text-4xl lg:leading-7;
    }
    h3 {
        @apply text-xl py-6 font-extrabold leading-none sm:text-5xl md:text-2xl lg:leading-7;
    }
    p {
        @apply col-span-6 text-base font-normal text-gray-700 lg:leading-8 xl:leading-8 md:text-xl;
    }
    a {
        @apply text-indigo-500;
    }
    ol {
        @apply list-decimal;
        @apply col-span-6 text-base font-normal text-gray-700 lg:leading-8 xl:leading-8 md:text-xl;
    }
</style>